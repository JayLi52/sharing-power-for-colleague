.personal-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 30px 0;
}
 .userinfo-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin: 20px;
 }
 .person-messages {
     width: 100%;
     border-bottom: 1px solid #ccc;
 }

 .person-messages .message {
     display: flex;
     flex-direction: row;
     justify-content: flex-start;
     align-items: center;
     border-top: 1px solid #ccc;
     padding: 5px 10px 5px 20px;
 }
 .person-messages .message image {
     width: 20px;
     height: 20px;
 }
 .person-messages .message text {
    flex-grow: 1;
    margin: 0 10px;
}